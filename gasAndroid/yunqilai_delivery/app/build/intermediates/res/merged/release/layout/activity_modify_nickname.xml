<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_white"
    android:orientation="vertical">
    <com.yunqilai.delivery.ui.view.CommonTitle
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/label_nickname"
        app:rightStr="@string/label_save"
        app:showRight="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_common"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/accounts_security_item_height" >
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin"
            style="@style/text_black_14"
            android:text=""/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_delete2"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_common"
        android:background="@color/line_gray"/>

</LinearLayout>
