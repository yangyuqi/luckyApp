<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yunqilai.delivery.ui.view.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/title_code"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_17"
            android:text="@string/label_code"
            />

        <EditText
            android:id="@+id/edt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            style="@style/text_black_17"
            android:textColorHint="@color/text_gray"
            android:hint="@string/hint_enter_code"
            android:background="@null"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_common"
        android:background="@color/line_gray"/>


    <Button
        android:id="@+id/btn_search"
        style="@style/text_white_17"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/input_code_btn_margin_top"
        android:background="@drawable/bg_blue_gradient_round_side"
        android:text="@string/btn_query" />

</LinearLayout>
