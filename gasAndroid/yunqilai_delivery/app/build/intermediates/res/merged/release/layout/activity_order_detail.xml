<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_gray_blue">
    <com.yunqilai.delivery.ui.view.CommonTitle
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/title_order_detail"/>
    <LinearLayout
        android:background="@color/bg_white"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_btn_height"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_yellow"
            android:gravity="center"
            style="@style/text_white_17"
            android:text="@string/btn_refuse"/>
        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_blue"
            android:gravity="center"
            style="@style/text_white_17"
            android:text="@string/btn_accept_order"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/common_title"
        android:layout_above="@+id/ll_bottom"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/orderdetail_head_height"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_head_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_order_delivery"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_order_pay_type_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_margin"
                        style="@style/text_black_17"
                        android:text="@string/label_order_is_on_delivery"/>
                    <TextView
                        android:id="@+id/tv_order_pay_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_order_pay_type_head"
                        style="@style/text_black_17"
                        android:text="@string/label_wait_user_pay"/>
                    <TextView
                        android:id="@+id/tv_order_pay_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_order_pay_type_head"
                        android:layout_toRightOf="@id/tv_order_pay_label"
                        style="@style/text_orange_17"
                        android:text=""/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_common"
                android:background="@color/bg_gray_blue"/>
            <!-- 收货地址 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_margin">
                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btn_call"/>
                <LinearLayout
                    android:id="@+id/ll_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_user"/>
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_black_17"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_black_17"
                        android:layout_marginLeft="60dp"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_blue_14"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/ll_user"
                    android:layout_marginTop="@dimen/common_margin"
                    android:layout_toLeftOf="@id/iv_phone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_pin"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_black_14"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:text=""/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_goto_auth"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:paddingBottom="@dimen/space_5"
                android:layout_height="wrap_content"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rect_corner"
                    android:background="@color/bg_gray_blue"/>
                <TextView
                    android:id="@+id/txt_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/immediately_attestation"
                    style="@style/text_white_14"
                    android:padding="@dimen/space_5"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5"
                    android:background="@drawable/bg_blue_gradient"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_common"
                android:background="@color/bg_gray_blue"/>


            <RelativeLayout
                android:id="@+id/rl_x"
                android:background="@color/bg_white"
                android:layout_marginTop="@dimen/space_10"
                android:layout_below="@+id/rl_select_addr"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/tv_c"
                    android:textSize="@dimen/text_size_15"
                    android:paddingLeft="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="留言  :"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@mipmap/icon_order_message"
                    />

                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_message"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="@dimen/text_size_15"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_c"
                    android:textSize="@dimen/text_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_common"
                android:background="@color/bg_gray_blue"/>

            <!-- 商品列表 -->
            <com.yunqilai.delivery.ui.view.NoScrollListView
                android:id="@+id/product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/bg_white"
                android:dividerHeight="@dimen/divider_height_small"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/common_margin"
                android:padding="@dimen/common_margin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_black_14"
                        android:text="@string/label_product_total_price"/>

                    <TextView
                        android:id="@+id/tv_product_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/text_orange_14"
                        android:text=""/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin">
                    <TextView
                        android:id="@+id/tv_yunfei_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_black_14"
                        android:text="@string/label_ship_price"/>
                    <TextView
                        android:id="@+id/tv_up_floor_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_yunfei_label"
                        style="@style/text_black_12"
                        android:text="@string/label_contant_up_floor_price"/>

                    <TextView
                        android:id="@+id/tv_skip_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/text_orange_14"
                        android:text=""/>

                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size_common"
                android:background="@color/line_gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_black_14"
                    android:text="@string/label_total_price"/>

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/text_orange_14"
                    android:text=""/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_common"
                android:background="@color/bg_gray_blue"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/common_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text="@string/label_order_num"/>
                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text="@string/label_order_time"/>
                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text="@string/label_refuse_order_time"/>
                    <TextView
                        android:id="@+id/tv_refuse_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lable_pay_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/common_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text="@string/lable_pay_time"/>
                    <TextView
                        android:id="@+id/tv_order_pay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text="@string/label_pay_type"/>
                    <TextView
                        android:id="@+id/tv_order_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text="@string/label_order_type"/>
                    <TextView
                        android:id="@+id/tv_order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray_14"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_common"
                android:background="@color/bg_gray_blue"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
