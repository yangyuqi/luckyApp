<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小吉"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_black"
            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name"
            android:text="1237432552"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tv_address"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="10dp"
            android:text="江苏省南京市睡大觉按实际大江苏省南京市睡大觉按实际大江苏省南京市睡大觉按实际大"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <CheckBox
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_15"
            android:id="@+id/cart_rb_q"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:background="@drawable/radio_button_bg"
            android:button="@null" />

        <TextView
            android:id="@+id/tv_change_name"
            android:text="默认地址"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cart_rb_q"
            />

        <TextView
            android:id="@+id/location_manager_ls_item_delete"
            android:textSize="@dimen/text_size_15"
            android:textColor="#006eff"
            android:text="删除"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="@dimen/space_15"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_edit"
            android:textSize="@dimen/text_size_15"
            android:textColor="#006eff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/location_manager_ls_item_delete"
            android:text="编辑"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/space_15"
            android:paddingLeft="@dimen/space_15"
            />

    </RelativeLayout>

</LinearLayout>