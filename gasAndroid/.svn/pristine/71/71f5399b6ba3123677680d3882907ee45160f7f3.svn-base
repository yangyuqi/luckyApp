<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_test_r"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:paddingBottom="@dimen/space_5"
                android:paddingTop="@dimen/space_5"
                android:paddingRight="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"
                android:id="@+id/tv_time"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/bg_white"
                android:background="#cdcdcd"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2017-06-5"
                />

        </RelativeLayout>

        <RelativeLayout
            android:padding="@dimen/space_13"
            android:background="@color/bg_white"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_below="@+id/rl_test_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_auth_q"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜你实名认证通过!"
                android:textColor="@color/main_color"
                />

            <TextView
                android:id="@+id/tv_no_fail"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:text=""
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_auth_q"
                />

            <Button
                android:id="@+id/btn_no_fail"
                android:textColor="@color/bg_white"
                android:text="去修改"
                android:clickable="true"
                android:background="@drawable/main_color"
                android:layout_marginTop="@dimen/space_30"
                android:layout_below="@+id/tv_auth_q"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>