<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/text_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yunqilai.delivery.ui.view.CommonTitle
        android:id="@+id/com_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/title_modify_attestation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_attestation_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_14"
            android:text="@string/label_user_name"
            />

        <EditText
            android:maxLength="30"
            android:id="@+id/edt_name_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@null"
            style="@style/text_black_14"
            android:hint="@string/hint_enter_name"
            android:textColorHint="@color/text_gray"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_common"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_attestation_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_14"
            android:text="@string/label_phone_num"
            />

        <EditText
            android:maxLength="11"
            android:inputType="number"
            android:id="@+id/edt_phone_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@null"
            style="@style/text_black_14"
            android:hint="@string/hint_enter_phone_num"
            android:textColorHint="@color/text_gray"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_common"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_attestation_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_14"
            android:text="@string/label_id_card"
            />

        <EditText
            android:maxLength="18"
            android:id="@+id/edt_card_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@null"
            style="@style/text_black_14"
            android:hint="@string/hint_enter_id_card"
            android:textColorHint="@color/text_gray"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_common"
        android:background="@color/line_gray" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_attestation_item_height"
        android:layout_marginLeft="@dimen/common_margin"
        android:gravity="center_vertical"
        style="@style/text_black_14"
        android:text="@string/label_id_card"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_attestation_img_height"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_stroke_gray_solid_white"
            android:padding="@dimen/line_size_common" >

            <ImageView
                android:id="@+id/iv_iv_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_identity_front"
                android:scaleType="centerInside"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/common_margin"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_stroke_gray_solid_white"
            android:padding="@dimen/line_size_common" >
            <ImageView
                android:id="@+id/iv_iv_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_identity_back"
                android:scaleType="centerInside" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_attestation_btn_height"
        android:layout_margin="@dimen/common_margin"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_click_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_gradient_round_corner"
            android:gravity="center"
            style="@style/text_white_14"
            android:text="@string/btn_upload_again" />
        <View
            android:layout_width="@dimen/common_margin"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_click_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_gradient_round_corner"
            android:gravity="center"
            style="@style/text_white_14"
            android:text="@string/btn_upload_again" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_confrim_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/add_attestation_btn_margin_top"
        android:background="@drawable/bg_gray_gradient_round_side"
        style="@style/text_white_17"
        android:text="@string/btn_commit" />

</LinearLayout>