    <style name="text_blue_deep_17">
        <item name="android:textColor">@color/text_blue_deep</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>

    <style name="text_white_12">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="text_white_14">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_white_17">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>

    <style name="text_gray_12">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>


    <style name="text_gray_14">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_gray_17">
        <item name="android:textColor">@color/text_gray</item>
