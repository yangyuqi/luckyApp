<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:scrollbars="none"
    android:id="@+id/sv"
    android:background="@color/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/ll_photo"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.yunqilai.consumer.luckyapp.Common.Ui.CircleImageView
                android:id="@+id/iv_iv_photo"
                android:layout_gravity="center_horizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/icon_logo"
                />

            <TextView
                android:maxLength="15"
                android:singleLine="true"
                android:id="@+id/tv_name"
                android:layout_marginTop="@dimen/space_15"
                android:paddingLeft="12dp"
                android:paddingRight="@dimen/space_12"
                android:paddingTop="@dimen/space_7"
                android:paddingBottom="@dimen/space_7"
                android:background="@drawable/frame_bg"
                android:textColor="@color/bg_white"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录 / 注册"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_rl_order"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="我的订单"
            android:textColor="@color/text_black"
            android:textSize="@dimen/space_18"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_right_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_main"/>
    
    <LinearLayout
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <RelativeLayout
            android:id="@+id/view_rl_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/space_10"
                android:textColor="@color/text_black"
                android:text="待支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_awit_pay"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_tv_one"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_15"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:textSize="@dimen/space_10"
                android:text="20"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/round_text_bg"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_rl_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/space_10"
                android:textColor="@color/text_black"
                android:text="待发货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_awit_take"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_tv_two"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_15"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:textSize="@dimen/space_10"
                android:text="20"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/round_text_bg"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_rl_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/space_10"
                android:textColor="@color/text_black"
                android:text="待收货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_awit_send"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_tv_three"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_15"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:textSize="@dimen/space_10"
                android:text="20"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/round_text_bg"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_rl_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_tv_four"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_15"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:textSize="@dimen/space_10"
                android:text="20"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/round_text_bg"
                />


            <TextView
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/space_10"
                android:textColor="@color/text_black"
                android:text="待评价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_awit_appraise"
                />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_confrim"
        android:layout_marginTop="@dimen/space_10"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="实名认证"
            android:textColor="@color/text_black"
            android:textSize="@dimen/space_15"
            />


        <TextView
            android:id="@+id/tv_tv_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            android:textColor="@color/main_color"
            android:text=""
            android:textSize="@dimen/text_size_15"
            android:drawablePadding="@dimen/space_5"
            android:drawableRight="@drawable/btn_right_bg"
            />

        <ImageView
            android:layout_marginRight="@dimen/space_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_right_bg"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_page"/>
    <RelativeLayout
        android:id="@+id/rl_select_addr_"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="收货地址"
            android:textColor="@color/text_black"
            android:textSize="@dimen/space_15"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_right_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            />

    </RelativeLayout>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color_main"/>
    <RelativeLayout
        android:visibility="gone"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="资产管理"
            android:textColor="@color/text_black"
            android:textSize="@dimen/space_15"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_right_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_page"/>
    <RelativeLayout
        android:id="@+id/rl_safe"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="账户与安全"
            android:textColor="@color/text_black"
            android:textSize="@dimen/space_15"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_right_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_page"/>
    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="关于我们"
            android:textColor="@color/text_black"
            android:textSize="@dimen/space_15"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_right_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_page"/>

    <RelativeLayout
        android:id="@+id/rl_clear"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="清除缓存"
            android:textColor="@color/text_black"
            android:textSize="@dimen/space_15"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_right_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_page"/>

        <RelativeLayout
            android:id="@+id/rl_update"
            android:clickable="true"
            android:background="@drawable/ripple_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:text="检查更新"
                android:textColor="@color/text_black"
                android:textSize="@dimen/space_15"
                />

            <ImageView
                android:id="@+id/img_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_right_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_15"
                />
            <TextView
                android:id="@+id/txt_version"
                android:layout_toLeftOf="@id/img_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/space_12"
                android:paddingRight="@dimen/space_10"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_register"
            android:clickable="true"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/bg_white"
            android:text="退出登录"
            android:background="@drawable/btn_login_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/relativeLayout_login"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>


</LinearLayout>
</ScrollView>