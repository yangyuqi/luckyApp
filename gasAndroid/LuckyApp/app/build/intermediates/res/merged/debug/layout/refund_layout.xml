<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_layout"/>

    <RelativeLayout
        android:id="@+id/rl_reason"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_black"
            android:text="退款原因"
            android:paddingLeft="@dimen/space_15"
            android:layout_centerVertical="true"
            android:id="@+id/tv_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:singleLine="true"
            android:gravity="end"
            android:layout_toRightOf="@+id/tv_com"
            android:id="@+id/tv_tv_reasion"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_gray"
            android:text="请选择"
            android:drawablePadding="10dp"
            android:layout_marginRight="@dimen/space_15"
            android:drawableRight="@drawable/btn_right"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>

    <RelativeLayout
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_black"
            android:text="退款金额"
            android:paddingLeft="@dimen/space_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_price"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_orgin"
            android:text="￥7777"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>

    <RelativeLayout
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="144dp">

        <TextView
            android:id="@+id/tv_g"
            android:layout_marginTop="@dimen/space_10"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_black"
            android:text="退款说明"
            android:paddingLeft="@dimen/space_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:maxLength="50"
            android:id="@+id/edt_edt_content"
            android:textSize="@dimen/text_size_15"
            android:textColorHint="@color/text_gray"
            android:hint="选填"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginTop="@dimen/space_10"
            android:layout_toRightOf="@+id/tv_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/divider_color_page"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>


    <Button
        android:id="@+id/btn_register"
        android:clickable="true"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/bg_white"
        android:text="提交"
        android:background="@drawable/btn_login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/relativeLayout_login"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        />

</LinearLayout>