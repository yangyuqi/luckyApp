<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_layout"/>

    <LinearLayout
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/space_15"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            />

        <EditText
            android:id="@+id/edt_name"
            android:textSize="@dimen/text_size_15"
            android:textColorHint="@color/text_gray"
            android:hint="请输入收货人姓名"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="@dimen/space_30"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>

    <LinearLayout
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/space_15"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            />

        <EditText
            android:id="@+id/edt_phone"
            android:maxLength="11"
            android:inputType="number"
            android:textSize="@dimen/text_size_15"
            android:textColorHint="@color/text_gray"
            android:hint="请输入手机号码"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="@dimen/space_18"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>

    <RelativeLayout
        android:id="@+id/rl_select_position"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/space_15"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            />

        <TextView
            android:id="@+id/tv_address"
            android:paddingRight="@dimen/space_15"
            android:drawablePadding="@dimen/space_10"
            android:text="请选择"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/btn_right"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>

    <EditText
        android:maxLength="50"
        android:id="@+id/edt_details_addr"
        android:textColorHint="@color/text_gray"
        android:textSize="@dimen/text_size_15"
        android:hint="请填写详细地址,不少于5个字"
        android:paddingTop="@dimen/space_15"
        android:paddingLeft="@dimen/space_15"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@null"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>

    <RelativeLayout
        android:id="@+id/rl_flat"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="户型"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/space_15"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            />

        <TextView
            android:id="@+id/tv_flat"
            android:paddingRight="@dimen/space_15"
            android:drawablePadding="@dimen/space_10"
            android:text="请选择"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/btn_right"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/divider_color_page"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="@dimen/space_15"
        android:text="注意:非电梯房在送货时要收取费用"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/main_color"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <CheckBox
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_15"
        android:id="@+id/cart_rb_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/radio_button_bg"
        android:button="@null" />

        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_14"
            android:text="设为默认"/>

</LinearLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_login"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_login_bg"
        android:clickable="true"
        android:text="提交"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>