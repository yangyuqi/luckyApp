<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/bg_white"
            android:id="@+id/rl_l"
            android:padding="@dimen/space_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单 :"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_tv_ordeer_num"
                android:text="93024230423"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_pay_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="待付款"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_blue"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_k"
            android:layout_below="@+id/rl_l"
            android:background="#fafafa"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cart_rb_q"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_toRightOf="@+id/iv_icon">

                <RelativeLayout
                    android:id="@+id/rl_test_q"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <TextView
                        android:gravity="start"
                        android:id="@+id/tv_content_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:layout_toLeftOf="@+id/tv_num"
                        android:text="运气来家用液化气运气来家用液化气"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_10"
                        android:text="×1"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_style_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_content_cart"
                        android:layout_marginTop="@dimen/space_5"
                        android:text="规格1.5L"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/tv_order_ls_item_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_style_cart"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="￥999.00"
                        android:textColor="@color/text_orgin"
                        android:textSize="@dimen/text_size_16" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_h"
            android:gravity="end"
            android:padding="@dimen/space_14"
            android:layout_below="@+id/rl_k"
            android:background="@color/bg_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_15"
                />
            <TextView
                android:id="@+id/tv_get_num"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                />

            <TextView
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件商品，"
                />

            <TextView
                android:id="@+id/tv_show_price_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计 ："
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_orgin"
                />
            <TextView
                android:id="@+id/tv_tv_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥777.00"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_orgin"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/rl_rl_status"
            android:background="@color/bg_white"
            android:layout_below="@+id/ll_h"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/divider_color_page"
                />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_marginLeft="@dimen/space_10"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款中"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_15"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_marginLeft="@dimen/space_15"
                        android:id="@+id/btn_btn_cancel"
                        android:textColor="@color/text_black"
                        android:text="取消订单"
                        android:clickable="true"
                        android:layout_width="85dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_line_bg"
                        />

                    <Button
                        android:layout_marginRight="@dimen/space_15"
                        android:id="@+id/btn_pay"
                        android:textColor="@color/bg_white"
                        android:text="付款"
                        android:clickable="true"
                        android:layout_width="85dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_scale_bg"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>