<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/space_13"
            android:background="@color/bg_white"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_below="@+id/rl_test_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order_q"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单已发货"
                android:textColor="@color/main_color"
                />

            <ImageView
                android:id="@+id/order_iv"
                android:src="@drawable/logo"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_order_q"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_num"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="订单编号:09923490213"
                />

            <TextView
                android:id="@+id/tv_content"
                android:textSize="@dimen/text_size_14"
                android:text="煤气天然气煤气天然气煤气天然气煤气天然气煤气天然气煤气天然气"
                android:textColor="@color/text_black"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:layout_toRightOf="@+id/order_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_q"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>