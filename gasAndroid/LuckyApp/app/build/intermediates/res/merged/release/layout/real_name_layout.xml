<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:paddingBottom="@dimen/space_15"
            android:id="@+id/ll_b"
            android:paddingTop="@dimen/space_15"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_audit"
                />
            <TextView
                android:id="@+id/tv_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="17sp"
                android:text="未认证"
                />

        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_show"
            android:paddingBottom="@dimen/space_15"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_m"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/text_blue"
                    android:text="原因："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_reasion"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fffff"
                    />

            </LinearLayout>


            <Button
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_5"
                android:id="@+id/btn"
                android:background="@drawable/main_color"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="去修改"
                android:textColor="@color/text_white"
                android:layout_below="@+id/ll_m" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_main"/>

    <LinearLayout
        android:paddingRight="@dimen/space_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:paddingLeft="@dimen/space_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:text="我的信息"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color_page"
        />
    <LinearLayout
        android:paddingRight="@dimen/space_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:paddingLeft="@dimen/space_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:text="姓名"
            />

        <EditText
            android:id="@+id/edt_edt_name"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="44dp"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_16"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color_page"
        />

    <LinearLayout
        android:paddingRight="@dimen/space_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:paddingLeft="@dimen/space_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:text="身份证"
            />

        <EditText
            android:singleLine="true"
            android:id="@+id/editText_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_30"
            android:background="@null"
            android:hint="请输入身份证号码"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color_page"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="身份证"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_15"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_16"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingLeft="@dimen/space_15"
        android:paddingRight="@dimen/space_15"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_line_bg"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:src="@drawable/identity_front_bg"
                />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_iv_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/space_15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_line_bg"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:src="@drawable/identity_back_bg"
                />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_iv_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>